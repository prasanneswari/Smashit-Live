<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/border"
    android:orientation="vertical"
    tools:context=".ProfileScreen.ProfileActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible"
        android:id="@+id/profilelay">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <Button
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_gravity="center"
                android:background="@drawable/backbtn"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:onClick="finishActivity"
                />
            <com.google.android.material.appbar.AppBarLayout
                android:id="@+id/app_bar"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:layout_marginTop="10dp"
                android:layout_alignParentRight="true"
                android:theme="@style/ThemeOverlay.AppCompat.DayNight.ActionBar"
                app:elevation="0dp">

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="?attr/actionBarSize"
                    android:background="?attr/colorPrimary"
                    app:theme="@style/ThemeOverlay.AppCompat.Dark">

                </androidx.appcompat.widget.Toolbar>
            </com.google.android.material.appbar.AppBarLayout>
        </RelativeLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:gravity="center"
                    >
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/profile_image"
                        android:layout_width="100sp"
                        android:layout_height="100sp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/uploadimgback"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp"
                        android:scaleType="centerCrop"
                        android:layout_gravity="center"
                        android:src="@drawable/uploadpictureold" />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:id="@+id/walletbtn"
                        android:background="@drawable/clamback"
                        android:paddingLeft="35dp"
                        android:paddingRight="35dp"
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:layout_gravity="center"

                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="@color/walletcolor"
                                android:textSize="22dp"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:fontFamily="@font/rubik_medium"
                                android:id="@+id/profile_Wallet"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="VA"
                                android:textColor="@color/white"
                                android:textSize="14dp"
                                android:layout_gravity="bottom"
                                android:gravity="bottom"
                                android:fontFamily="@font/rubik"
                                android:id="@+id/coinname"
                                android:layout_marginLeft="5dp"
                                />

                        </LinearLayout>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/walletbal"
                            android:textSize="15dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:layout_marginBottom="5dp"
                            android:fontFamily="@font/rubik"
                            />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/profile_username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10sp"
                        android:gravity="center"
                        android:text="--"
                        android:textColor="@color/green_color_picker"
                        android:textSize="20dp"
                        android:fontFamily="@font/rubik_medium"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10sp"
                        android:weightSum="8">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="2"
                            android:fontFamily="@font/rubik"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:text="@string/followers"
                            android:id="@+id/followersclick"
                            android:textColor="@color/white" />
                        <View
                            android:layout_width="1sp"
                            android:layout_height="match_parent"
                            android:background="@color/white"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/following"
                            android:textColor="@color/white"
                            android:gravity="center"
                            android:fontFamily="@font/rubik"
                            android:textStyle="bold"
                            android:layout_gravity="center"
                            android:layout_weight="2"
                            android:id="@+id/followingclick"
                            />
                        <View
                            android:layout_width="1sp"
                            android:layout_height="match_parent"
                            android:background="@color/white"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/likes"
                            android:textColor="@color/white"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:layout_weight="2"
                            android:fontFamily="@font/rubik"
                            android:textStyle="bold"
                            />
                        <View
                            android:layout_width="1sp"
                            android:layout_height="match_parent"
                            android:background="@color/white"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/create"
                            android:textColor="@color/white"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:layout_weight="2"
                            android:fontFamily="@font/rubik"
                            android:textStyle="bold"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10sp"
                        android:weightSum="8">

                        <TextView
                            android:id="@+id/follower_count"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="2"
                            android:fontFamily="@font/rubik"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:text="--"
                            android:textSize="15sp"
                            android:textColor="@color/signup" />

                        <TextView
                            android:id="@+id/following_count"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="2"
                            android:fontFamily="@font/rubik"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:text="--"
                            android:textSize="15sp"
                            android:textColor="@color/signup" />

                        <TextView
                            android:id="@+id/likes_count"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="2"
                            android:fontFamily="@font/rubik"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:text="--"
                            android:textSize="15sp"
                            android:textColor="@color/signup" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="2"
                            android:fontFamily="@font/rubik"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:text="--"
                            android:textSize="15sp"
                            android:id="@+id/cratedcount"
                            android:textColor="@color/signup" />


                    </LinearLayout>
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_giftbox"
                        android:layout_gravity="center"
                        android:layout_margin="5sp"
                        android:padding="10sp"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2sp"
                        android:background="@drawable/continubuttom"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/rubik"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:text="@string/created"
                            android:padding="10sp"
                            android:textColor="@color/white"
                            android:id="@+id/created"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="3sp"
                            android:background="@drawable/continubuttom"
                            android:visibility="visible"
                            android:id="@+id/createimg"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/rubik"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:text="@string/liked"
                            android:padding="10sp"
                            android:textColor="@color/white"
                            android:id="@+id/liked"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="3sp"
                            android:id="@+id/likedimg"
                            android:visibility="gone"
                            android:background="@drawable/continubuttom"
                            />
                    </LinearLayout>
                </LinearLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="650sp"
                        android:id="@+id/profile_content_recycleview">
                    </androidx.recyclerview.widget.RecyclerView>

                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="650sp"
                        android:id="@+id/likedlist"
                        android:visibility="gone">
                    </androidx.recyclerview.widget.RecyclerView>

                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/animation_view_1"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        app:lottie_autoPlay="true"
                        app:lottie_fileName="data.json"
                        app:lottie_loop="true"
                        android:visibility="gone"
                        android:layout_centerInParent="true"
                        android:layout_alignParentTop="true"
                        />
                    <ProgressBar
                        android:id="@+id/p_bar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:visibility="gone"
                        android:padding="10dp"
                        />

                </RelativeLayout>
            </LinearLayout>

        </ScrollView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/displayimglay"
        android:visibility="gone">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/displayimg"
            />
    </LinearLayout>

</LinearLayout>