<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5sp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4"
        android:layout_margin="3sp"
        android:padding="3sp">
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="1"
            android:padding="5sp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Follower"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:id="@+id/post_name"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="visible to only followers"
                android:textColor="@color/white"
                android:id="@+id/post_id"
                android:visibility="gone"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3">
            <CheckBox
                android:id="@+id/post_checkBox"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layoutDirection="rtl"
                android:padding="5sp"
                android:layout_gravity="center"
                android:gravity="center"
                android:button="@drawable/checkbox_selecter"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/post_checkBox_img"

                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:background="@drawable/post_select_item"
                android:button="@drawable/post_select_item"
                android:gravity="center"
                android:layoutDirection="rtl"
                android:padding="15sp"
                android:scaleType="fitXY"
                android:visibility="visible" />

        </RelativeLayout>
    </LinearLayout>
</LinearLayout>